<div class="container">

<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "Delete this dose", dose_path(dose), method: :delete, class: 'btn btn-danger' %>
<% end %>
<%= link_to "dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
<%= link_to "All cocktails", cocktails_path, class: 'btn btn-primary' %>

</div>

